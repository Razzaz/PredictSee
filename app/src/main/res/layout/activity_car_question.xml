<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".CarQuestionActivity">

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="379dp"
        android:layout_height="637dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/specification_cars" />

    <EditText
        android:id="@+id/enginesize"
        android:imeOptions="actionDone"
        android:layout_width="306dp"
        android:layout_height="35dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:fontFamily="@font/karlareguler"
        android:hint="cc"
        android:inputType="numberDecimal"
        android:textColorLink="@color/colorMain"
        android:textCursorDrawable="@color/colorMain"
        app:layout_constraintBottom_toBottomOf="@+id/imageView11"
        app:layout_constraintEnd_toEndOf="@+id/imageView11"
        app:layout_constraintHorizontal_bias="0.534"
        app:layout_constraintStart_toStartOf="@+id/imageView11"
        app:layout_constraintTop_toTopOf="@+id/imageView11"
        app:layout_constraintVertical_bias="0.385" />

    <EditText
        android:id="@+id/horsepower"
        android:imeOptions="actionDone"
        android:layout_width="306dp"
        android:layout_height="35dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:fontFamily="@font/karlareguler"
        android:hint="hp"
        android:inputType="numberDecimal"
        android:textColorLink="@color/colorMain"
        android:textCursorDrawable="@color/colorMain"
        app:layout_constraintBottom_toBottomOf="@+id/imageView11"
        app:layout_constraintEnd_toEndOf="@+id/imageView11"
        app:layout_constraintHorizontal_bias="0.534"
        app:layout_constraintStart_toStartOf="@+id/imageView11"
        app:layout_constraintTop_toTopOf="@+id/imageView11"
        app:layout_constraintVertical_bias="0.531" />

    <EditText
        android:id="@+id/fueleconomy"
        android:imeOptions="actionDone"
        android:layout_width="306dp"
        android:layout_height="35dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:fontFamily="@font/karlareguler"
        android:hint="km/liter"
        android:inputType="numberDecimal"
        android:textColorLink="@color/colorMain"
        android:textCursorDrawable="@color/colorMain"
        app:layout_constraintBottom_toBottomOf="@+id/imageView11"
        app:layout_constraintEnd_toEndOf="@+id/imageView11"
        app:layout_constraintHorizontal_bias="0.534"
        app:layout_constraintStart_toStartOf="@+id/imageView11"
        app:layout_constraintTop_toTopOf="@+id/imageView11"
        app:layout_constraintVertical_bias="0.674" />

    <EditText
        android:id="@+id/carwidth"
        android:imeOptions="actionDone"
        android:layout_width="306dp"
        android:layout_height="35dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:fontFamily="@font/karlareguler"
        android:hint="cm"
        android:inputType="numberDecimal"
        android:textColorLink="@color/colorMain"
        android:textCursorDrawable="@color/colorMain"
        app:layout_constraintBottom_toBottomOf="@+id/imageView11"
        app:layout_constraintEnd_toEndOf="@+id/imageView11"
        app:layout_constraintHorizontal_bias="0.534"
        app:layout_constraintStart_toStartOf="@+id/imageView11"
        app:layout_constraintTop_toTopOf="@+id/imageView11"
        app:layout_constraintVertical_bias="0.825" />

    <EditText
        android:id="@+id/wheelbase"
        android:imeOptions="actionDone"
        android:layout_width="306dp"
        android:layout_height="35dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:fontFamily="@font/karlareguler"
        android:hint="cm"
        android:inputType="numberDecimal"
        android:textColorLink="@color/colorMain"
        android:textCursorDrawable="@color/colorMain"
        app:layout_constraintBottom_toBottomOf="@+id/imageView11"
        app:layout_constraintEnd_toEndOf="@+id/imageView11"
        app:layout_constraintHorizontal_bias="0.534"
        app:layout_constraintStart_toStartOf="@+id/imageView11"
        app:layout_constraintTop_toTopOf="@+id/imageView11"
        app:layout_constraintVertical_bias="0.232" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/imageView11"
        app:layout_constraintEnd_toEndOf="@+id/imageView11"
        app:layout_constraintStart_toStartOf="@+id/imageView11"
        app:layout_constraintTop_toTopOf="@+id/imageView11"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/specification_title" />

    <Button
        android:id="@+id/button_predict"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="@drawable/rounded_button"
        android:fontFamily="@font/karlabold"
        android:text="PREDICT"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageView11"
        app:layout_constraintStart_toStartOf="@+id/imageView11" />

</androidx.constraintlayout.widget.ConstraintLayout>